@using Project_Flight_Manager.ViewModels.Reservations

@model Project_Flight_Manager.ViewModels.Flights.FlightDetailsViewModel

@{
    ViewData["Title"] = "Details";
}



<style>
    .content {
        color: white;
        background-color: rgba(163, 167, 204, 0.2);
        padding: 10px;
    }
</style>

<div class="content">

    <h1>Details</h1>
    <h4>FlightDataModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Airline ID
        </dt>
        <dd class="col-sm-10">
            @Model.AirlineID
        </dd>
        <dt class="col-sm-2">
            Airline Name
        </dt>
        <dd class="col-sm-10">
            @Model.AirlineName
        </dd>
        <dt class="col-sm-2">
            From Location
        </dt>
        <dd class="col-sm-10">
            @Model.FromLocation
        </dd>
        <dt class="col-sm-2">
            To Location
        </dt>
        <dd class="col-sm-10">
            @Model.ToLocation
        </dd>
        <dt class="col-sm-2">
            Depature Time
        </dt>
        <dd class="col-sm-10">
            @Model.DepatureTime
        </dd>
        <dt class="col-sm-2">
            Flight Duration
        </dt>
        <dd class="col-sm-10">
            @Model.FlightDuration hours
        </dd>
        <dt class="col-sm-2">
            Pilot Name
        </dt>
        <dd class="col-sm-10">
            @Model.PilotName
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
        <dt class="col-sm-2">
            Business Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.BusinessCapacity
        </dd>
    </dl>
    <p>Reservations made for this flight:</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Ticket Type
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ReservationUserViewModel user in Model.Reservations)
            {
                <tr>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    <td>
                        @user.TicketType.ToString()
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.FlightId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>